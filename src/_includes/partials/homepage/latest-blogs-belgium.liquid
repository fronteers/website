<section data-partial="homepage/latest-blogs" class="inner-wrapper">
    {%- include partials/utility/dynamic-headerlevel level: headerlvl title: partialTitle -%}
    <ul class="desktop-rows mobile-slider">
        {%- for post in blogposts_belgium limit: 3 -%}
            <li class="list-item list-item--blog">
                {%- include partials/blogpost headerlvl: "h3" index: forloop.index -%}
            </li>
        {%- endfor -%}
    </ul>

    <div class="button-wrapper">
        <a href="/{{ locale }}/blog/" class="button button-parentheses">
            {{ translations[locale].blockTitles.viewOurBlogs }}
        </a>
    </div>
</section>
